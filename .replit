entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "psmisc", "pyflyby", "systemdUkify", "tree", "unzipNLS"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Chess Game Fetcher"

[[workflows.workflow]]
name = "Chess Game Fetcher"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py | tee output.txt"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Nohup start "
mode = "sequential"
author = 2911550

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "nohup sh -c 'python main.py 2>&1 | tee output.txt' &"
